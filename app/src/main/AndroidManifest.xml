<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.petvirtual">

    <application
        android:allowBackup="true"
        android:icon="@drawable/favicon_inicial"
        android:label="@string/app_name"
        android:roundIcon="@drawable/favicon_inicial"
        android:supportsRtl="true"
        android:theme="@style/Theme.PetVirtual">
        <activity
            android:name=".IdiomaActivity"
            android:exported="false"/>
        <activity
            android:name=".MenuActivity"
            android:exported="false" />
        <activity
            android:name=".CadastroPetActivity"
            android:exported="false" />
        <activity
            android:name=".CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>